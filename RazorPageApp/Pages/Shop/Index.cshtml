@page
@model RazorPageApp.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Shop";
}

<!-- Shop Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <!-- Price Start -->
            <div class="border-bottom mb-4 pb-4">
                <h5 class="font-weight-semi-bold mb-4">Filter by category</h5>
                <form asp-action="/Shop/Index" method="get">
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input disabled" disabled checked id="price-all">
                        <label class="custom-control-label" for="price-all">All Price</label>
                    </div>
                    @*<span class="badge border font-weight-normal">1000</span>*@
                    @foreach (var item in Model.Categories)
                    {
                        if (item.Selected)
                        {
                            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                <input type="checkbox" name="CategoryIds" onchange="this.form.submit()" checked value="@item.Value" class="custom-control-input" id="category-@item.Value">
                                <label class="custom-control-label" for="category-@item.Value">@item.Text</label>
                                @*<span class="badge border font-weight-normal">1000</span>*@
                            </div>
                        }
                        else
                        {
                            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                <input type="checkbox" name="CategoryIds" onchange="this.form.submit()" value="@item.Value" class="custom-control-input" id="category-@item.Value">
                                <label class="custom-control-label" for="category-@item.Value">@item.Text</label>
                                @*<span class="badge border font-weight-normal">1000</span>*@
                            </div>
                        }
                    }
                </form>
            </div>
            <!-- Price End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    
                    <form asp-action="/Shop/Index" method="get">
                        <input type="hidden" asp-for="PageSize" />
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name">
                                <div class="input-group-append">
                                    <span class="input-group-text bg-transparent text-primary">
                                        <i class="fa fa-search"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="dropdown ml-4">
                                <select asp-for="CategoryIds" asp-items="Model.Categories" class="form-control form-select-multi" multiple="multiple" onchange="this.form.submit()"></select>
                            </div>
                            <div class="dropdown ml-4">
                                <select asp-for="OrderBy" asp-items="Model.OrderByList" class="form-control" onchange="this.form.submit()"></select>
                            </div>
                        </div>
                    </form>
                </div>
                @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <partial name="_ProductItem" model="product" />
                    </div>
                }
                <div class="col-12 pb-1">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mb-3">
                            @if (Model.CurrentPage >= 1)
                            {
                            <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            }
                            else
                            {
                            <li class="page-item">
                                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage-1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            }
                            @for (int i = 1; i <= Model.Pages; i++)
                            {
                                
                                if (i == Model.CurrentPage)
                                {
                                    <li class="page-item active"><a class="page-link" href="?CurrentPage=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" href="?CurrentPage=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy">@i</a></li>
                                }
                            }
                            @if (Model.CurrentPage <= Model.Pages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage +1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
