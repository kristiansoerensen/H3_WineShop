@model Product
<div class="card product-item border-0 mb-4">
    <a asp-page="./Details" asp-route-id="@Model.Id">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            @if (Model.Images != null && @Model.Images.FirstOrDefault() != null)
            {
                <img class="img-fluid w-100" src="@("/ProductImages/" + Model.Images.FirstOrDefault().Filename)" alt="">
            }
            else
            {
                <img class="img-fluid w-100" src="/img/placeholder.png" alt="">
            }
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.Name</h6>
            <div class="d-flex justify-content-center">
                <h6>@Model.Price</h6><h6 class="text-muted ml-2"><del>@Model.Price</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a asp-page="./Details" asp-route-id="@Model.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
        </div>
    </a>
</div>