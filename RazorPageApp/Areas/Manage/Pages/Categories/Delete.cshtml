@page
@model RazorPageApp.Areas.Manage.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = Model.Category.Name;
    ViewData["ActivePage"] = ManageNavPages.CategoryIndex;
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>