@page
@model RazorPageApp.Areas.Manage.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Manage Products";
    ViewData["ActivePage"] = ManageNavPages.ProductIndex;
}

<h3>@ViewData["Title"]</h3>
<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="col-12 pb-1">

    <form method="get">
        <input type="hidden" asp-for="PageSize" />
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name" />
                <div onclick="this.form.submit()" class="input-group-append">
                    <span class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                    </span>
                </div>
            </div>
            <div class="dropdown ml-4">
                <select asp-for="CategoryIds" asp-items="Model.Categories" class="form-control form-select-multi" multiple="multiple" onchange="this.form.submit()"></select>
            </div>
            <div class="dropdown ml-4">
                <select asp-for="OrderBy" asp-items="Model.OrderByList" class="form-control" onchange="this.form.submit()"></select>
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Brand)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Products[0].Category)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Products[0].SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Category.Name)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-12 pb-1">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-3">
            @if (Model.CurrentPage >= 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage-1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= Model.Pages; i++)
            {

                if (i == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="?CurrentPage=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="?CurrentPage=@i&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy">@i</a></li>
                }
            }
            @if (Model.CurrentPage <= Model.Pages)
            {
                <li class="page-item">
                    <a class="page-link" href="?CurrentPage=@(Model.CurrentPage +1)&PageSize=@Model.PageSize&SearchTerm=@Model.SearchTerm&OrderBy=@Model.OrderBy" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
